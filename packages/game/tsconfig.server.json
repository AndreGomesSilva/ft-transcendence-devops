{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/pong.ts",
    "src/config/nameGenerator.ts",
    "src/Paddle.ts",
    "src/Ball.ts",
    "src/Board.ts",
    "src/AI.ts",
    "src/config/Config.ts",
    "src/config/ConfigLoader.ts",
    "src/styles.scss"
  ]
} 